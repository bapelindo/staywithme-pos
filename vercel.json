{
  "functions": {
    "api/*.php": {
      "runtime": "vercel-php@0.7.4",
      "includeFiles": [
        "app/**",
        "config/**"
      ]
    }
  },
  "routes": [
    {
      "src": "/(.*\\.(css|js|ico|jpg|jpeg|png|gif|svg|woff|woff2|ttf|eot|mp3|webmanifest))",
      "headers": { "Access-Control-Allow-Origin": "*" },
      "dest": "/public/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/api/index.php"
    }
  ]
}